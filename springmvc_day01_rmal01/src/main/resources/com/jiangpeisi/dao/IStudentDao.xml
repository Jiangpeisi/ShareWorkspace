<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiangpeisi.dao.IStudentDao">


    <insert id="insert" parameterType="com.jiangpeisi.domain.Student">
        INSERT INTO student(username, password, findkey)
        values (#{username}, #{password}, #{findkey})
    </insert>

    <delete id="delete" parameterType="com.jiangpeisi.domain.Student">
        delete
        from student
        where username = #{username}
    </delete>

    <update id="update" parameterType="com.jiangpeisi.domain.Student">
        update student
        set address=#{address},
            sex=#{sex},
            tel=#{tel},
            email=#{email},
            signature=#{signature},
            nickname=#{nickname},
            age=#{age},
            avatar=#{avatar}
        where username = #{username}
    </update>

    <update id="updatePassword" parameterType="com.jiangpeisi.domain.Student">
        update student
        set password = #{password}
        where username = #{username};
    </update>

    <select id="findByName" parameterType="String" resultType="com.jiangpeisi.domain.Student">
        select *
        from student
        where username = #{name}
    </select>

</mapper>