<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiangpeisi.dao.IStudentDao">
    <!--获取已选课程-->
    <resultMap id="Choose_Course_Map" type="com.jiangpeisi.domain.Student">
        <id column="id" property="id" />
        <result column="username" property="username"/>
        <collection property="course_offerings" ofType="com.jiangpeisi.domain.Course_Offering">
            <id column="course_offering_id" property="id"></id>
            <association property="course" column="course_id" javaType="com.jiangpeisi.domain.Course" select="com.jiangpeisi.dao.ICourseDao.findById"></association>
            <association property="teacher" column="teacher_id" javaType="com.jiangpeisi.domain.Teacher" select="com.jiangpeisi.dao.ITeacherDao.findById"></association>
        </collection>
    </resultMap>

    <insert id="insert" parameterType="com.jiangpeisi.domain.Student">
        INSERT INTO student(username,password,findkey) values (#{username},#{password},#{findkey})
    </insert>

    <delete id="delete" parameterType="com.jiangpeisi.domain.Student">
        delete from student where username=#{username}
    </delete>

    <update id="update" parameterType="com.jiangpeisi.domain.Student">
        update student set address=#{address},sex=#{sex},tel=#{tel},email=#{email},signature=#{signature},nickname=#{nickname},age=#{age},avatar=#{avatar} where username=#{username}
    </update>

    <update id="updatePassword" parameterType="com.jiangpeisi.domain.Student">
        update student set password = #{password} where username=#{username};
    </update>

    <select id="findByName" parameterType="String" resultType="com.jiangpeisi.domain.Student">
        select * from student where username=#{name}
    </select>

    <select id="findById" parameterType="java.lang.Integer" resultType="com.jiangpeisi.domain.Student">
        select * from student where id=#{id}
    </select>

    <select id="get_choose_course" parameterType="com.jiangpeisi.domain.Student" resultMap="Choose_Course_Map">
        SELECT student.id,student.username,course_offering.id AS course_offering_id,course_offering.course_id,course_offering.teacher_id
        FROM student INNER JOIN course_choose ON course_choose.student_id = student.id INNER JOIN course_offering ON course_choose.course_offering_id = course_offering.id
        where student.id=#{id}
    </select>
</mapper>