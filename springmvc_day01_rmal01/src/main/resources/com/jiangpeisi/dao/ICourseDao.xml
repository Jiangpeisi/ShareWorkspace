<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiangpeisi.dao.ICourseDao">

    <select id="findAll" resultType="com.jiangpeisi.domain.Course">
        select *
        from course
    </select>

    <select id="findByName" resultType="com.jiangpeisi.domain.Course">
        select *
        from course
        where name = #{name}
    </select>

    <select id="findById" resultType="com.jiangpeisi.domain.Course">
        select *
        from course
        where id = #{id}
    </select>

    <insert id="insert" parameterType="com.jiangpeisi.domain.Course">
        insert into course (name, description)
        values (#{name}, #{description});
    </insert>

    <delete id="delete" parameterType="com.jiangpeisi.domain.Course">
        delete
        from course
        where id = {#id}
    </delete>

    <update id="update" parameterType="com.jiangpeisi.domain.Course">
        update course
        set name        = #{name},
            description = #{description}
        where id = #{id}
    </update>
</mapper>