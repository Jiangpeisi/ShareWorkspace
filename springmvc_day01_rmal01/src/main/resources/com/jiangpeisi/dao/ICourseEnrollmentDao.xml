<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiangpeisi.dao.ICourseEnrollmentDao">
    <!--获取已选课程-->
    <resultMap id="Choose_Course_Map" type="com.jiangpeisi.domain.Student">
        <id column="username" property="username"/>
        <collection property="courses" ofType="com.jiangpeisi.domain.Course">
            <id column="coursename" property="coursename"></id>
        </collection>
    </resultMap>
    <insert id="insert" parameterType="com.jiangpeisi.domain.CourseEnrollment">
        insert into course_Choose(username, coursename)
        values (#{username}, #{coursename})
    </insert>
    <delete id="delete" parameterType="com.jiangpeisi.domain.CourseEnrollment">
        delete
        from _courseChoose
        where username = #{username}
          and coursename = #{coursename}
    </delete>
</mapper>