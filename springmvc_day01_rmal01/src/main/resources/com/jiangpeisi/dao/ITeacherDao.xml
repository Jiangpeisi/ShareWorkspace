<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiangpeisi.dao.ITeacherDao">
<resultMap id="Offering_Course_Map" type="com.jiangpeisi.domain.Teacher">
    <id column="id" property="id"></id>
    <collection property="offering_courses" ofType="com"
</resultMap>
    <insert id="insert" parameterType="com.jiangpeisi.domain.Teacher">
        insert into teacher(username,password,findkey) values (#{username},#{password},#{findkey})
    </insert>

    <delete id="delete" parameterType="com.jiangpeisi.domain.Teacher">
        delete from teacher where username=#{username}
    </delete>

    <update id="update" parameterType="com.jiangpeisi.domain.Teacher">
         update teacher set address=#{address},sex=#{sex},tel=#{tel},email=#{email},signature=#{signature},nickname=#{nickname},age=#{age},avatar=#{avatar} where username=#{username}
    </update>

    <update id="updatePassword" parameterType="com.jiangpeisi.domain.Student">
        update student set password = #{password} where username=#{username};
    </update>

    <select id="findByName" parameterType="java.lang.String" resultType="com.jiangpeisi.domain.Teacher">
        select * from teacher where username=#{name}
    </select>
</mapper>